{
  "name": "@hyphev/below",
  "version": "1.1.0",
  "description": "The CSS design system of hyphev projects",
  "homepage": "https://below.hyphev.com/",
  "scripts": {
    "start": "npm-run-all --parallel watch docs-serve",
    "prepublishOnly": "scripts/prepublish",
    "postpublish": "scripts/postpublish",
    "linkinator": "linkinator _site --recurse --skip \"^(?!http://localhost)\"",
    "css": "npm-run-all css-compile css-minify css-copy",
    "css-copy": "cross-env-shell shx mkdir -p site/static/assets/dist/css/ && cross-env-shell shx cp -r dist/* site/static/assets/dist/css/",
    "css-main": "npm-run-all css-lint css-compile-main css-minify-main css-copy",
    "css-docs": "npm-run-all css-compile-docs css-minify-docs",
    "css-light-main": "npm-run-all css-compile-main css-minify-main css-copy",
    "css-compile": "npm-run-all --parallel css-compile-*",
    "css-compile-main": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/index.scss dist/below.min.css",
    "css-compile-docs": "cross-env-shell node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 site/static/assets/scss/index.scss site/static/assets/dist/css/docs.min.css",
    "css-lint": "npm-run-all --parallel css-lint-*",
    "css-lint-main": "stylelint \"src/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css-lint-docs": "stylelint \"site/static/scss/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-main": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/below.min.css dist/below.min.css",
    "css-minify-docs": "cross-env-shell cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output site/static/assets/dist/css/docs.min.css site/static/assets/dist/css/docs.min.css",
    "lint": "npm-run-all --parallel css-lint",
    "coveralls": "shx cat js/coverage/lcov.info | coveralls",
    "docs": "npm-run-all css-docs docs-build",
    "predocs-build": "npm-run-all css-copy",
    "docs-build": "hugo --cleanDestinationDir",
    "docs-compile": "npm run docs-build",
    "docs-production": "cross-env HUGO_ENV=production npm run docs-build",
    "predocs-serve": "npm-run-all css-copy",
    "docs-serve": "hugo server --port 9000 --disableFastRender",
    "docs-serve-only": "http-server _site -p 9000 -a localhost",
    "dist": "npm-run-all --parallel css",
    "test": "npm-run-all lint",
    "netlify": "npm run dist && npm run docs-production",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch src/ --ext scss --exec \"npm run css-main\"",
    "watch-css-docs": "nodemon --watch \"site/static/assets/scss/\" --ext scss --exec \"npm run css-docs\""
  },
  "style": "dist/below.css",
  "sass": "src/index.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyphev/below.git"
  },
  "keywords": [
    "css",
    "design-system",
    "scss",
    "sass"
  ],
  "author": "hyphev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyphev/below/issues"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "clean-css-cli": "^4.3.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "find-unused-sass-variables": "^0.3.3",
    "glob": "^7.1.4",
    "hammer-simulator": "0.0.1",
    "http-server": "^0.11.1",
    "hugo-bin": "^0.43.6",
    "ip": "^1.1.5",
    "linkinator": "^1.4.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "qunit": "^2.9.2",
    "rollup": "^1.12.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.2.4",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "stylelint": "^9.10.1"
  },
  "dependencies": {
    "rimraf": "^2.6.3",
    "stylelint-config-standard": "^18.3.0"
  }
}
